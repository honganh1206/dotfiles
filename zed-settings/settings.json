{
  "terminal": {
    "dock": "bottom",
    "font_size": 12,
    "font_family": "BerkeleyMono Nerd Font",
    "line_height": {
      "custom": 1.25
    },
    "env": {
      "GIT_EDITOR": "zed --wait"
    }
  },

  "vim_mode": true,
  "base_keymap": "VSCode",
  "ui_font_size": 12,
  "buffer_font_size": 12,
  "indent_guides": { "enabled": false },
  "preview_tabs": {
    "enabled": false,
    "enable_preview_from_code_navigation": false
  },
  "use_autoclose": false,
  "auto_update": false,
  "wrap_guides": [80],

  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet-latest"
    },
    "version": "2"
  },
  "soft_wrap": "none",
  "cursor_blink": false,
  "project_panel": {
    "show_diagnostics": "all",
    "scrollbar": {
      "show": "never"
    }
  },
  "scrollbar": {
    "show": "never"
  },
  "ui_font_family": "BerkeleyMono Nerd Font",
  "buffer_font_family": "BerkeleyMono Nerd Font",
  "buffer_line_height": {
    "custom": 1.25
  },
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Gruvbox Dark Hard"
  },
  "features": {
    "inline_completion_provider": "none"
  },
  "inlay_hints": {
    "enabled": true
  },
  "dev": {
    "vertical_scroll_margin": 0,
    "scroll_beyond_last_line": "off",
    "inline_completions": {
      "disabled_globs": [".env", "*.md", "*.json"]
    },
    "git": {
      "inline_blame": { "enabled": true, "show_commit_summary": false }
    }
  },
  "lsp": {
    "gopls": {
      "initialization_options": {
        "usePlaceholders": true,
        "completeUnimported": false,
        "experimentalPostfixCompletions": true,
        "hints": {
          "assignVariableTypes": false,
          "compositeLiteralFields": false,
          "compositeLiteralTypes": false,
          "constantValues": true,
          "functionTypeParameters": true,
          "parameterNames": true,
          "rangeVariableTypes": true
        }
      }
    }
  },
  "use_on_type_format": false,
  "languages": {
    "Markdown": {
      "preferred_line_length": 80,
      "format_on_save": "off",
      "soft_wrap": "preferred_line_length"
    },
    "HTML": {
      "format_on_save": "off"
    },
    "SQL": {
      "formatter": "prettier",
      "format_on_save": "off"
    },
    "JSON": {
      "prettier": {
        "allowed": true,
        "parser": "json"
      }
    },
    "JavaScript": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    },
    "C": {
      "format_on_save": "on"
    },
    "Go": {
      // "preferred_line_length": 80,
      "format_on_save": "on"
    },
    "C++": {
      "format_on_save": "on"
    }
  }
}
