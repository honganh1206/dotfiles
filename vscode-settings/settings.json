{
    /** Window */
    "window.menuBarVisibility": "compact",
    "window.newWindowDimensions": "offset",
    "window.restoreWindows": "preserve",
    "window.commandCenter": false,
    "window.titleBarStyle": "native",
    /** Extensions */
    "security.workspace.trust.untrustedFiles": "open",
    "liveServer.settings.donotShowInfoMsg": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit"
    },
    "prettier.tabWidth": 4,
    "prettier.endOfLine": "auto",
    "liveServer.settings.donotVerifyTags": true,
    "workbench.editor.enablePreview": false,
    /** Prettier configs per file types */
    "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },

    /** Configs per language */

    // Python
    "notebook.formatOnSave.enabled": true,
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter"
    },

    // JS
    "javascript.updateImportsOnFileMove.enabled": "always",
    "javascript.inlayHints.parameterNames.enabled": "all",

    // TS
    "typescript.inlayHints.enumMemberValues.enabled": true,
    "typescript.updateImportsOnFileMove.enabled": "always",

    // C#
    "[csharp]": {
        "editor.defaultFormatter": "ms-dotnettools.csharp"
    },

    // Go
    "[go]": {
        "editor.formatOnSave": true
        // "editor.defaultFormatter": "golang.go",
    },

    "workbench.sideBar.location": "right",
    "workbench.editor.showTabs": "multiple",
    "workbench.statusBar.visible": true,
    "workbench.tree.indent": 12,
    "workbench.tree.renderIndentGuides": "none",
    /** Workbench Scrolling */
    "workbench.list.smoothScrolling": true,
    "workbench.list.fastScrollSensitivity": 8,
    /** Workbench Editor */
    "workbench.editor.limit.enabled": false,
    "workbench.editor.limit.perEditorGroup": true,
    "workbench.editor.limit.value": 5,
    "workbench.editor.limit.excludeDirty": true,
    "workbench.editor.pinnedTabSizing": "shrink",
    "workbench.editor.preventPinnedEditorClose": "keyboard",
    "workbench.editor.closeOnFileDelete": true,
    "workbench.editor.tabActionCloseVisibility": false,
    /** Workbench */
    "workbench.layoutControl.enabled": false,
    "workbench.tips.enabled": false,
    "workbench.tree.enableStickyScroll": false,
    "workbench.colorCustomizations": {
        "tree.indentGuidesStroke": "#4E4B5C"
    },
    "editor.fontLigatures": true,
    "editor.fontWeight": 300,
    "editor.lineHeight": 22,
    /** Editor Scroll */
    "editor.smoothScrolling": true,
    "editor.scrollbar.verticalScrollbarSize": 10,
    "editor.stickyScroll.enabled": false,
    /** Editor Brackets */
    "editor.bracketPairColorization.enabled": false,
    "editor.guides.bracketPairsHorizontal": "active",
    "editor.guides.bracketPairs": true,
    /** Editor Cursor */
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.cursorStyle": "line-thin",
    "editor.cursorBlinking": "solid",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.cursorSurroundingLines": 10,
    "editor.hideCursorInOverviewRuler": false,
    /** Editor Scrollbar */
    "editor.scrollbar.horizontal": "hidden",
    "editor.scrollbar.vertical": "hidden",
    "editor.overviewRulerBorder": false,
    /** Editor Indentation */
    "editor.detectIndentation": false,
    "editor.guides.highlightActiveIndentation": "always",
    "editor.guides.indentation": true,
    /** Editor Controls */
    "editor.showFoldingControls": "never",
    "editor.dragAndDrop": false,
    /** Editor Details */
    "editor.renderLineHighlight": "none",
    "editor.occurrencesHighlight": "off",
    "editor.matchBrackets": "never",
    // "editor.lineNumbers": "relative",
    /** Editor Formating */
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.formatOnPaste": false,
    "editor.formatOnType": false,
    "editor.linkedEditing": true,
    /** Editor Inline Hints */
    "editor.inlayHints.enabled": "off",
    "editor.inlayHints.fontFamily": "Jetbrains Mono",
    "editor.inlayHints.fontSize": 10,
    "editor.experimental.asyncTokenization": true,
    "editor.insertSpaces": true,
    "editor.wordWrap": "on",
    "editor.hover.delay": 200,
    "editor.accessibilitySupport": "off",
    "editor.stickyTabStops": true,
    "editor.unfoldOnClickAfterEndOfLine": true,
    "editor.semanticHighlighting.enabled": true,
    "editor.minimap.enabled": false,
    "editor.tabSize": 2,
    "editor.renderWhitespace": "trailing",
    "editor.lightbulb.enabled": "off",
    "editor.copyWithSyntaxHighlighting": false,
    "editor.emptySelectionClipboard": false,
    "editor.snippetSuggestions": "top",
    /** Language General */
    "workbench.editor.languageDetection": false,
    "editor.autoSurround": "languageDefined",

    /** Explorer */
    /** Explorer Controls */
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,
    "explorer.autoReveal": false,
    "explorer.compactFolders": false,
    "explorer.incrementalNaming": "smart",

    /** Search */
    "search.smartCase": true,
    "search.showLineNumbers": true,
    "search.useIgnoreFiles": false,
    "search.exclude": {
        // Hide everything in /vendor, except the "laravel" and "livewire" folder.
        "**/vendor/{[^l],?[^ai]}*": true,
        // Hide everything in /public, except "index.php"
        "**/public/{[^i],?[^n]}*": true,
        "**/dist": true,
        "**/_ide_helper.php": true,
        "**/composer.lock": true,
        "storage": true,
        ".phpunit.result.cache": true,
        "**/node_modules": true,
        "**/.nuxt": true,
        "**/.output": true,
        "**/logs": true,
        "**/**.code-search": true,
        "**/bower_components": true,
        "**/.git": true,
        "**/.github": true,
        "**/dist/**": true,
        "**/pnpm-lock.yaml": true,
        "**/npm-shrinkwrap.json": true,
        "**/package-lock.json": true,
        "**/yarn.lock": true
    },

    /** Git */
    /** Diff editor */
    "git.openRepositoryInParentFolders": "never",
    "diffEditor.codeLens": true,
    "diffEditor.renderSideBySide": false,
    "multiDiffEditor.experimental.enabled": true,
    /** Files */
    "files.associations": {
        "*.json": "jsonc",
        "*.tmpl": "html"
    },
    "files.enableTrash": true,
    "files.restoreUndoStack": true,
    "files.exclude": {
        "**/.git": false,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/.parcel-cache": true,
        "**/bin": true,
        "**/obj": true
    },
    "files.defaultLanguage": "${activeEditorLanguage}",
    "files.autoSave": "afterDelay",
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,

    /** Terminal */
    "terminal.integrated.smoothScrolling": true,
    "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font Mono, JetBrainsMono Nerd Font",
    "terminal.integrated.fontSize": 12,
    "terminal.integrated.cwd": "${workspaceFolder}",
    "terminal.integrated.enableMultiLinePasteWarning": "auto",
    "terminal.integrated.scrollback": 10000,
    "terminal.explorerKind": "external",
    "terminal.external.windowsExec": "C:\\Windows\\System32\\WindowsPowerShell\\v1.0\\powershell.exe",

    /** Breadcrumbs */
    "breadcrumbs.enabled": true,
    "breadcrumbs.filePath": "on",
    "breadcrumbs.symbolPath": "off",
    "terminal.integrated.tabs.enabled": false,

    // Vim stuff
    "vim.handleKeys": {
        "<C-d>": true,
        "<C-s>": false,
        "<C-z>": false,
        "<C-p>": false,
        "<C-w>": false
    },
    "vim.easymotion": true,
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.insertModeKeyBindings": [
        {
            "before": ["j", "j"],
            "after": ["<Esc>"]
        }
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["<leader>", "d"],
            "after": ["d", "d"]
        },
        {
            "before": ["<C-n>"],
            "commands": [":nohl"]
        },
        {
            "before": ["K"],
            "commands": ["lineBreakInsert"],
            "silent": true
        }
    ],
    "vim.leader": "<space>",
    "vim.visualstar": true,
    "vim.foldfix": true,
    "extensions.experimental.affinity": {
        "vscodevim.vim": 1
    },
    "workbench.activityBar.location": "hidden",
    "editor.fontFamily": "JetBrainsMono Nerd Font Mono"
}
