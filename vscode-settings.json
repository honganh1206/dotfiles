{
    /** Window */
    "window.menuBarVisibility": "classic",
    "window.newWindowDimensions": "inherit",
    "window.restoreWindows": "preserve",
    "window.commandCenter": true,
    "window.titleBarStyle": "custom",

    /** Extension: Apc */
    "apc.font.family": "JetBrainsMono Nerd Font Mono",
    "apc.monospace.font.family": "JetBrainsMono Nerd Font Mono",

    "apc.electron": {
        "titleBarStyle": "hiddenInset",
        "frame": false
    },

    "apc.imports": [
        "~/.custom-loaders/patch-vscode.js",
        "~/.custom-loaders/patch-vscode.css"
    ],

    "apc.stylesheet": {
        ":root": {
            "--titlebar-height": "40px !important"
        },

        ".editor-container": {
            "height": "calc(100% - var(--titlebar-height)) !important;"
        },

        ".split-view-view:has(>.sidebar)": {
            "display": "flex"
        },

        ".decorationsOverviewRuler": {
            "display": "none !important"
        },

        ".editor-actions": {
            "display": "none !important"
        },

        ".tabs-and-actions-container": {
            "--editor-group-tab-height": "40px !important"
        },

        ".tabs.show-file-icons": {
            "--editor-group-tab-height": "40px !important"
        },

        ".part.sidebar": {
            "display": "flex",
            "flex-direction": "column",
            "height": "auto"
        },

        ".sidebar .composite.title": {
            "flex-direction": "column",
            "height": "auto",
            "padding": "0 4px"
        },

        ".sidebar .composite.title .title-label": {
            "margin": "10px 0",
            "padding-left": "0"
        },

        ".sidebar .composite.title h2": {
            "width": "100%",
            "text-align": "center"
        },

        ".sidebar .composite.title .title-actions .actions-container": {
            "justify-content": "space-evenly !important"
        }
    },

    /** Extensions */
    "codemetrics.basics.CodeLensEnabled": true,
    "security.workspace.trust.untrustedFiles": "open",
    "liveServer.settings.donotShowInfoMsg": true,
    "gruvboxMaterial.darkContrast": "hard",
    "gruvboxMaterial.darkPalette": "original",
    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit"
    },
    "prettier.tabWidth": 4,
    "prettier.endOfLine": "auto",
    "todo-tree.tree.disableCompactFolders": true,
    "liveServer.settings.CustomBrowser": "chrome:PrivateMode",
    "indentRainbow.colors": [
        "rgba(3, 4, 94,0.15)",
        "rgba(2, 62, 138,0.15)",
        "rgba(0, 119, 182, 0.15)",
        "rgba(0, 150, 199,0.15)",
        "rgba(0, 180, 216,0.15)",
        "rgba(72, 202, 228,0.15)",
        "rgba(144, 224, 239,0.15)",
        "rgba(144, 224, 239,0.1)",
        "rgba(144, 224, 239,0.05)",
        "rgba(144, 224, 239,0.025)"
    ],
    // "gitlens.ai.experimental.provider": "openai",
    // "gitlens.ai.experimental.openai.model": "gpt-4-1106-preview",
    // "sqltools.useNodeRuntime": true,
    "liveServer.settings.donotVerifyTags": true,
    "workbench.editor.enablePreview": false,

    /** Prettier configs per file types */
    // JSON
    "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    // HTML
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },

    /** Configs per language */

    // Python
    "python.defaultInterpreterPath": "python3",
    "python.experiments.enabled": false,
    "notebook.formatOnSave.enabled": true,
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter"
    },

    // JS
    "javascript.updateImportsOnFileMove.enabled": "always",
    "javascript.inlayHints.parameterNames.enabled": "all",

    // TS
    "typescript.inlayHints.enumMemberValues.enabled": true,
    "typescript.updateImportsOnFileMove.enabled": "always",

    // C#
    "[csharp]": {
        "editor.defaultFormatter": "ms-dotnettools.csharp"
    },
    /** NOTE: Sometimes this might not work depending on the version of C# Dev Kit Extension
    e.g., v 1.3.10
    **/
    "csharp.debug.console": "externalTerminal",


    /**
     * Workbench UI
     **/
    "workbench.activityBar.location": "hidden",
    "workbench.sideBar.location": "right",
    "workbench.editor.showTabs": "none",
    "workbench.statusBar.visible": true,
    "workbench.tree.indent": 12,
    "workbench.tree.renderIndentGuides": "none",
    /** Workbench Scrolling */
    "workbench.list.smoothScrolling": true,
    "workbench.list.fastScrollSensitivity": 8,
    /** Workbench Editor */
    "workbench.editor.limit.enabled": false,
    "workbench.editor.limit.perEditorGroup": true,
    "workbench.editor.limit.value": 5,
    "workbench.editor.limit.excludeDirty": true,
    "workbench.editor.pinnedTabSizing": "shrink",
    "workbench.editor.preventPinnedEditorClose": "keyboard",
    "workbench.editor.closeOnFileDelete": true,
    "workbench.editor.tabActionCloseVisibility": false,

    /** Workbench */
    "workbench.layoutControl.enabled": false,
    "workbench.tips.enabled": false,
    "workbench.tree.enableStickyScroll": false,
    "workbench.colorCustomizations": {
        "tree.indentGuidesStroke": "#4E4B5C",
        "activityBar.activeBorder": "#dbd7caed"
    },
    "workbench.iconTheme": "material-icon-theme",
    /** Editor Font */
    "editor.fontFamily": "JetBrainsMono Nerd Font",
    "editor.fontLigatures": true,
    "editor.fontWeight": 400,
    "editor.lineHeight": 22,
    "editor.fontSize": 12,
    /** Editor Scroll */
    "editor.smoothScrolling": true,
    "editor.scrollbar.verticalScrollbarSize": 10,
    "editor.stickyScroll.enabled": false,
    /** Editor Brackets */
    "editor.bracketPairColorization.enabled": false,
    "editor.guides.bracketPairsHorizontal": "active",
    "editor.guides.bracketPairs": true,
    /** Editor Cursor */
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.cursorStyle": "line-thin",
    "editor.cursorBlinking": "solid",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.cursorSurroundingLines": 10,
    "editor.hideCursorInOverviewRuler": false,
    /** Editor Scrollbar */
    "editor.scrollbar.horizontal": "hidden",
    "editor.scrollbar.vertical": "hidden",
    "editor.overviewRulerBorder": false,
    /** Editor Indentation */
    "editor.detectIndentation": false,
    "editor.guides.highlightActiveIndentation": "always",
    "editor.guides.indentation": true,
    /** Editor Controls */
    "editor.showFoldingControls": "never",
    "editor.dragAndDrop": false,
    /** Editor Details */
    "editor.renderLineHighlight": "none",
    "editor.occurrencesHighlight": "off",
    "editor.matchBrackets": "never",
    // "editor.lineNumbers": "relative",
    /** Editor Formating */
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.formatOnPaste": false,
    "editor.formatOnType": false,
    "editor.linkedEditing": true,
    /** Editor Inline Hints */
    "editor.inlayHints.enabled": "off",
    "editor.inlayHints.fontFamily": "JetBrainsMono Nerd Font",
    "editor.inlayHints.fontSize": 10,
    /** Editor */
    "editor.experimental.asyncTokenization": true,
    "editor.insertSpaces": true,
    "editor.wordWrap": "on",
    "editor.hover.delay": 200,
    "editor.accessibilitySupport": "off",
    // "editor.codeActionsOnSave": {
    //   "source.fixAll.eslint": "explicit"
    // },
    "editor.stickyTabStops": true,
    "editor.unfoldOnClickAfterEndOfLine": true,
    "editor.semanticHighlighting.enabled": true,
    "editor.minimap.enabled": false,
    "editor.tabSize": 2,
    "editor.renderWhitespace": "trailing",
    "editor.lightbulb.enabled": "off",
    "editor.copyWithSyntaxHighlighting": false,
    "editor.emptySelectionClipboard": false,
    "editor.snippetSuggestions": "top",

    /** Language General */
    "workbench.editor.languageDetection": false,
    "editor.autoSurround": "languageDefined",
    /** Scm */
    "scm.diffDecorations": "all",
    /** Explorer Controls */
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,
    "explorer.autoReveal": false,
    "explorer.compactFolders": false,
    /** Explorer */
    "explorer.incrementalNaming": "smart",
    "symbols.hidesExplorerArrows": false,
    /** Emmet */
    "emmet.showSuggestionsAsSnippets": true,
    "emmet.triggerExpansionOnTab": true,
    "emmet.includeLanguages": {
        "vue-html": "html",
        "vue": "html"
    },
    /** Search */
    "search.smartCase": true,
    "search.showLineNumbers": true,
    "search.useIgnoreFiles": false,
    "search.exclude": {
        // Hide everything in /vendor, except the "laravel" and "livewire" folder.
        "**/vendor/{[^l],?[^ai]}*": true,
        // Hide everything in /public, except "index.php"
        "**/public/{[^i],?[^n]}*": true,
        "**/dist": true,
        "**/_ide_helper.php": true,
        "**/composer.lock": true,
        "storage": true,
        ".phpunit.result.cache": true,
        "**/node_modules": true,
        "**/.nuxt": true,
        "**/.output": true,
        "**/logs": true,
        "**/**.code-search": true,
        "**/bower_components": true,
        "**/.git": true,
        "**/.github": true,
        "**/dist/**": true,
        "**/pnpm-lock.yaml": true,
        "**/npm-shrinkwrap.json": true,
        "**/package-lock.json": true,
        "**/yarn.lock": true
    },
    /** Git */
    // "git.autofetch": true,
    // "git.autofetchPeriod": 180,
    // "git.confirmSync": false,
    /** Diff editor */
    "git.openRepositoryInParentFolders": "never",
    "diffEditor.codeLens": true,
    "diffEditor.ignoreTrimWhitespace": false,
    "diffEditor.renderSideBySide": false,
    "multiDiffEditor.experimental.enabled": true,
    /** Files */
    "files.associations": {
        "*.json": "json"
    },
    "files.enableTrash": true,
    "files.restoreUndoStack": true,
    "files.exclude": {
        "**/.git": false,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/.parcel-cache": true,
        "**/bin": true,
        "**/obj": true
    },
    "files.defaultLanguage": "${activeEditorLanguage}",
    "files.autoSave": "afterDelay",
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,

    /** Minimal Mode */
    "zenMode.centerLayout": false,
    "zenMode.fullScreen": false,
    "zenMode.hideLineNumbers": false,
    "zenMode.hideStatusBar": false,
    "zenMode.silentNotifications": false,

    /** Terminal */
    "terminal.integrated.smoothScrolling": true,
    "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font Mono, JetBrainsMono Nerd Font",
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.defaultProfile.windows": "PowerShell",
    "terminal.integrated.cwd": "${workspaceFolder}",
    "terminal.integrated.enableMultiLinePasteWarning": "auto",
    "terminal.integrated.scrollback": 10000,

    /** Breadcrumbs */
    "breadcrumbs.enabled": true,
    "breadcrumbs.filePath": "on",
    "breadcrumbs.symbolPath": "off",

    "markdown-preview-enhanced.enablePreviewZenMode": true,
    "markdown-preview-enhanced.previewTheme": "one-dark.css"
}
